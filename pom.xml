		<package-name>sciview</package-name>

		<!-- Dependency versions for JitPack -->
		<sciview.version>9a71de9</sciview.version>
		<scenery.version>f55e46b</scenery.version>
		<kotlin.version>1.4-M1</kotlin.version>
